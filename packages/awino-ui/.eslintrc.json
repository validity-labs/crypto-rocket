{
  "extends": ["plugin:cypress/recommended", "next/core-web-vitals", "prettier"],
  "plugins": ["cypress", "jest", "prettier"],
  "env": {
    "jest/globals": true,
    "cypress/globals": true
  },
  "rules": {
    // "comma-dangle": ["error", "always-multiline"],
    "@next/next/no-img-element": "off",
    /* NOT APPLIED */
    "react/jsx-first-prop-new-line": [2, "multiline"],
    "react/jsx-max-props-per-line": [2, { "maximum": 1, "when": "multiline" }],
    // "react/jsx-indent-props": [2, 2],
    // "react/jsx-closing-bracket-location": [2, "tag-aligned"],
    // "react/jsx-first-prop-new-line": "multiline",
    // "react/jsx-max-props-per-line": [1, { "maximum": { "single": 1, "multi": 1 } }],
    "import/order": [
      "error",
      {
        "groups": ["type", "builtin", "external", "internal", "parent", "sibling", "index", "object"],
        "pathGroups": [
          {
            "pattern": "{react,react-dom}",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "{next,next/**,next-**,next-**/**}",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "react-**",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "{@mui/**,@emotion/**}",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/**",
            "group": "internal",
            "position": "before"
          }
        ],
        "newlines-between": "always",
        "pathGroupsExcludedImportTypes": [],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
